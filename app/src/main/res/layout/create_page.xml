<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/title_event_title"
            android:layout_width="140dp"
            android:layout_height="58dp"
            android:text="EVENT TITLE" />

        <EditText
            android:id="@+id/edit_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:ems="10"
            android:inputType="text"
            android:text="input title here"
            tools:layout_editor_absoluteX="359dp"
            tools:layout_editor_absoluteY="29dp" />

        <TextView
            android:id="@+id/title_date_selecter"
            android:layout_width="139dp"
            android:layout_height="47dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="TextView" />

        <Button
            android:id="@+id/button_date_selecter"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Set" />


        <TextView
            android:id="@+id/title_time_selecter"
            android:layout_width="139dp"
            android:layout_height="43dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="ALARM" />

    </GridLayout>
</android.support.constraint.ConstraintLayout>